<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%highlight(%-5level)] %cyan(%logger) - %msg %n</pattern>
    </encoder>
  </appender>

  <logger name="lucuma-odb" level="INFO" />
  <logger name="lucuma-odb-container" level="DEBUG" />
  <logger name="lucuma-odb-test" level="ERROR" />
  <logger name="lucuma.odb.obscalc.Main" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>